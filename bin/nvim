#!/usr/bin/env bash

DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)"

configDir=${HOME}/.config/nvim
if [ ! -d $configDir ]; then
	echo "[ERR] ${configDir} is missing. Will exit now."
	exit 1
fi

${DIR}/run \
	-v ${configDir}:/root/.config/nvim \
	-v ${HOME}/.local:/root/.local \
	b00gizm/neovim:latest sh -c "nvim ${@}"
